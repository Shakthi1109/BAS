<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="SecuGen.bas.RegisterActivity">

    <Button
        android:id="@+id/buttonLedOn99"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:layout_x="249dp"
        android:layout_y="315dp"
        android:background="@drawable/circular_background"
        android:text="LED"
        android:textColor="#ffffff" />

    <ImageView
        android:id="@+id/imageViewFingerprint99"
        android:layout_width="152dp"
        android:layout_height="132dp"
        android:layout_x="30dp"
        android:layout_y="342dp"
        android:contentDescription="@string/fingerprint_capture_image"
        android:src="@drawable/pficon" />

    <TextView
        android:id="@+id/textViewResult99"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:layout_x="782dp"
        android:layout_y="15dp"
        android:text="@string/welcome"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/buttonCapture99"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:layout_x="249dp"
        android:layout_y="380dp"
        android:background="@drawable/circular_background"
        android:text="Capture"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:layout_x="0dp"
        android:layout_y="99dp"
        android:background="@drawable/circular_background_no_fill"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:hint="Name"
        android:inputType="textPersonName"
        android:padding="8dp"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="21dp" />

    <Button
        android:id="@+id/registerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:layout_x="250dp"
        android:layout_y="446dp"
        android:background="@drawable/circular_background"
        android:text="Register"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="378dp" />

    <EditText
        android:id="@+id/editAmt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:layout_x="0dp"
        android:layout_y="164dp"
        android:background="@drawable/circular_background_no_fill"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:hint="Register Number"
        android:padding="8dp"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="96dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:layout_x="1dp"
        android:layout_y="232dp"
        android:background="@drawable/circular_background_no_fill"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:hint="SRM Email"
        android:inputType="textEmailAddress"
        android:padding="8dp"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="83dp" />

    <Spinner
        android:id="@+id/spinnerYear"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:layout_x="28dp"
        android:layout_y="26dp"
        android:background="@drawable/circular_background_no_fill"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:entries="@array/YEAR"
        android:hint="Year"
        android:padding="8dp"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="83dp" />

    <Spinner
        android:id="@+id/spinnerDept"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:layout_x="265dp"
        android:layout_y="26dp"
        android:entries="@array/DEPT"
        android:background="@drawable/circular_background_no_fill"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:hint="Dept"
        android:padding="8dp"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="83dp" />

    <Spinner
        android:id="@+id/spinnerSection"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:layout_x="148dp"
        android:layout_y="25dp"
        android:background="@drawable/circular_background_no_fill"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:hint="SEC"
        android:padding="8dp"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="83dp" />

</AbsoluteLayout>
